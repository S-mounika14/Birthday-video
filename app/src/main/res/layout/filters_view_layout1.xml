<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/filters_rel_layouts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="@color/white"
        tools:ignore="UselessParent">


        <LinearLayout
            android:id="@+id/resets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:paddingTop="8dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:paddingTop="2dp"
                android:src="@drawable/refresh_icon"
                app:tint="#414a4c"
                android:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reset"
                android:textColor="#414a4c"
                android:textStyle="bold"
                android:fontFamily="@font/designfont" />

        </LinearLayout>




        <ImageView
            android:id="@+id/tick_marks"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="8dp"
            android:src="@drawable/ic_check"
            app:tint="#414a4c"
            android:visibility="visible"/>


        <LinearLayout
            android:id="@+id/filter_layout"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/show_filter_relative_layouts"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">
                <View
                    android:id="@+id/filters_bars"
                    android:layout_width="40dp"
                    android:layout_height="2dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background=" #414a4c"
                    android:importantForAccessibility="no" />

                <TextView
                    android:id="@+id/filters_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/font"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="Filter"
                    android:textColor="#414a4c"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:fontFamily="@font/font" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/show_edit_relative_layouts"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <View
                    android:id="@+id/edit_bars"
                    android:layout_width="35dp"
                    android:layout_height="2dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background=" #414a4c"
                    android:importantForAccessibility="no"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/edit_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/font"
                    android:gravity="center"
                    android:text="Adjust"
                    android:padding="8dp"
                    android:textColor=" #414a4c"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:fontFamily="@font/font" />

            </RelativeLayout>


        </LinearLayout>



        <LinearLayout
            android:id="@+id/effect_linear"
            android:layout_width="match_parent"
            android:layout_below="@+id/filter_layout"
            android:layout_height="120dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/effect_recyclers1"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_below="@+id/filter_layout"
                android:scrollbarThumbHorizontal="@color/White"
                android:scrollbars="none" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/edit_linear_layouts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/filter_layout"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:visibility="gone"
            >

            <!-- Grouped SeekBars -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginBottom="10dp">

                <!-- Brightness SeekBar -->
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">


                    <com.birthday.video.maker.Birthday_Video.activity.TwoLineSeekBar
                        android:id="@+id/brightness_seekbars"
                        android:layout_width="0dp"
                        android:layout_height="16dp"
                        android:layout_weight="1"
                        app:high_color="#414a4c"
                        app:line_color="#C1C0C0"
                        app:line_width="3dp"
                        app:nail_color="#414a4c"
                        app:nail_radius="1dp"
                        app:thumb_radius="7dp"
                        app:thumb_color="#414a4c" />

                    <TextView
                        android:id="@+id/brightness_values"
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="0"
                        android:fontFamily="@font/designfont"
                        android:gravity="center"
                        android:textColor="#414a4c"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:ignore="SmallSp" />
                </LinearLayout>

                <!-- Contrast SeekBar -->
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">


                    <com.birthday.video.maker.Birthday_Video.activity.TwoLineSeekBar
                        android:id="@+id/contrast_seekbars"
                        android:layout_width="0dp"
                        android:layout_height="16dp"
                        android:layout_weight="1"
                        app:high_color="#414a4c"
                        app:line_color="#C1C0C0"
                        app:line_width="3dp"
                        app:nail_color="#414a4c"
                        app:nail_radius="1dp"
                        app:thumb_radius="7dp"
                        app:thumb_color="#414a4c" />

                    <TextView
                        android:id="@+id/contrast_values"
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="0"
                        android:fontFamily="@font/designfont"
                        android:gravity="center"
                        android:textColor="#414a4c"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:ignore="SmallSp" />
                </LinearLayout>

                <!-- Saturation SeekBar -->
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    tools:ignore="DuplicateIds">


                    <com.birthday.video.maker.Birthday_Video.activity.TwoLineSeekBar
                        android:id="@+id/saturation_seekbars"
                        android:layout_width="0dp"
                        android:layout_height="16dp"
                        android:layout_weight="1"
                        app:high_color="#414a4c"
                        app:line_color="#C1C0C0"
                        app:line_width="3dp"
                        app:nail_color="#414a4c"
                        app:nail_radius="1dp"
                        app:thumb_radius="7dp"
                        app:thumb_color="#414a4c" />

                    <TextView
                        android:id="@+id/saturation_values"
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="0"
                        android:fontFamily="@font/designfont"
                        android:gravity="center"
                        android:textColor="#414a4c"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:ignore="SmallSp" />
                </LinearLayout>

                <!-- Hue SeekBar -->
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">


                    <com.birthday.video.maker.Birthday_Video.activity.TwoLineSeekBar
                        android:id="@+id/hue_seekbars"
                        android:layout_width="0dp"
                        android:layout_height="16dp"
                        android:layout_weight="1"
                        app:high_color="#414a4c"
                        app:line_color="#C1C0C0"
                        app:line_width="3dp"
                        app:nail_color="#414a4c"
                        app:nail_radius="1dp"
                        app:thumb_radius="7dp"
                        app:thumb_color="#414a4c" />

                    <TextView
                        android:id="@+id/hue_values"
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="0"
                        android:fontFamily="@font/designfont"
                        android:gravity="center"
                        android:textColor="#414a4c"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:ignore="SmallSp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.birthday.video.maker.Birthday_Video.activity.TwoLineSeekBar
                        android:id="@+id/warmth_seekBars"
                        android:layout_width="0dp"
                        android:layout_height="16dp"
                        android:layout_weight="1"
                        app:high_color="#414a4c"
                        app:line_color="#C1C0C0"
                        app:line_width="3dp"
                        app:nail_color="#414a4c"
                        app:nail_radius="1dp"
                        app:thumb_radius="7dp"
                        app:thumb_color="#414a4c" />

                    <TextView
                        android:id="@+id/warmth_values"
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="#414a4c"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:ignore="SmallSp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <SeekBar
                        android:id="@+id/vignette_seekBars"
                        android:layout_width="0dp"
                        android:layout_height="16dp"
                        android:layout_weight="1"
                        app:high_color="#414a4c"
                        app:line_color="#C1C0C0"
                        app:line_width="3dp"
                        app:nail_color="#414a4c"
                        app:nail_radius="1dp"
                        app:thumb_radius="7dp"
                        app:thumb_color="#414a4c" />

                    <TextView
                        android:id="@+id/vignette_values"
                        android:layout_width="35dp"

                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:gravity="center"
                        android:fontFamily="@font/designfont"
                        android:text="0"
                        android:textColor="#414a4c"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:ignore="SmallSp" />

                </LinearLayout>


            </FrameLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="6">

                <!-- Brightness -->
                <LinearLayout
                    android:id="@+id/bright_ness_layouts"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/brights"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/brightness"
                        app:tint="#DBDBDB"
                        />

                    <TextView
                        android:id="@+id/Brightness_texts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Brightness"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/designfont"
                        app:fontFamily="@font/designfont"
                        tools:ignore="HardcodedText,SmallSp"
                        />
                    <View
                        android:id="@+id/brightness_bars"
                        android:layout_width="15dp"
                        android:layout_height="2dp"
                        android:layout_marginTop="3dp"
                        android:visibility="gone"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:background=" #414a4c"
                        android:importantForAccessibility="no" />

                </LinearLayout>

                <!-- Contrast -->
                <LinearLayout
                    android:id="@+id/contrast_layouts"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/contrasts"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/contrast"
                        app:tint="#DBDBDB"/>

                    <TextView
                        android:id="@+id/contrast_texts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contrast"
                        android:textSize="10sp"

                        android:textStyle="bold"
                        android:fontFamily="@font/designfont"
                        app:fontFamily="@font/designfont"
                        tools:ignore="HardcodedText,SmallSp" />
                    <View
                        android:id="@+id/contrast_bars"
                        android:layout_width="15dp"
                        android:layout_height="2dp"
                        android:layout_marginTop="3dp"
                        android:visibility="gone"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:background=" #414a4c"
                        android:importantForAccessibility="no" />


                </LinearLayout>

                <!-- Saturation -->
                <LinearLayout
                    android:id="@+id/saturation_layouts"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/saturates"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/saturation"
                        app:tint="#DBDBDB"/>

                    <TextView
                        android:id="@+id/saturate_texts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Saturation"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/designfont"
                        app:fontFamily="@font/designfont"
                        tools:ignore="HardcodedText,SmallSp" />
                    <View
                        android:id="@+id/saturate_bars"
                        android:layout_width="15dp"
                        android:layout_height="2dp"
                        android:visibility="gone"
                        android:layout_marginTop="3dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:background=" #414a4c"
                        android:importantForAccessibility="no" />

                </LinearLayout>

                <!-- Hue -->
                <LinearLayout
                    android:id="@+id/hue_layouts"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/hues"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/hue"
                        app:tint="#DBDBDB"/>

                    <TextView
                        android:id="@+id/hue_texts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hue"
                        android:textColor="@color/bg_color"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/designfont"
                        app:fontFamily="@font/designfont"
                        tools:ignore="HardcodedText,SmallSp" />
                    <View
                        android:id="@+id/hue_bars"
                        android:layout_width="15dp"
                        android:layout_height="2dp"
                        android:layout_marginTop="3dp"
                        android:visibility="gone"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:background=" #414a4c"
                        android:importantForAccessibility="no" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/warmth_layouts"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/warmths"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/warmth"
                        app:tint="#DBDBDB"/>

                    <TextView
                        android:id="@+id/warmth_texts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="warmth"
                        android:textColor="#DBDBDB"
                        android:layout_marginTop="0dp"

                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/designfont"
                        app:fontFamily="@font/designfont"
                        tools:ignore="HardcodedText,SmallSp" />
                    <View
                        android:id="@+id/warmth_bars"
                        android:layout_width="15dp"
                        android:layout_height="2dp"
                        android:layout_marginTop="3dp"
                        android:visibility="gone"

                        android:background="#DBDBDB"
                        android:importantForAccessibility="no" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/vignette_layouts"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/vignettes"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/vignetteicon"
                        app:tint="#DBDBDB" />

                    <TextView
                        android:id="@+id/vignette_texts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="vignette"
                        android:textColor="#DBDBDB"

                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/designfont"
                        app:fontFamily="@font/designfont"
                        tools:ignore="HardcodedText,SmallSp" />

                    <View
                        android:id="@+id/vignette_bars"
                        android:layout_width="15dp"
                        android:layout_height="2dp"
                        android:layout_marginTop="3dp"
                        android:background=" #DBDBDB"
                        android:importantForAccessibility="no"
                        android:visibility= "gone" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>