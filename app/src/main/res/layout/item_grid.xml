<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#36111211"
    app:cardCornerRadius="4dp"
    app:cardUseCompatPadding="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/click_layout"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/item_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/video_select_image"
            android:adjustViewBounds="true"
            android:layout_gravity="center"
            android:scaleType="center" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:id="@+id/hide_layout"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/edit_image"
                android:layout_width="wrap_content"
                android:contentDescription="@string/birthday_edit_image"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:src="@drawable/ic_edit"
                android:layout_margin="2dp"
                android:visibility="visible"/>


            <ImageView
                android:id="@+id/grid_delete_img"
                android:layout_width="wrap_content"
                android:layout_gravity="right"
                android:contentDescription="@string/video_delete_image"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/ic_cancel_30dp_red"
                android:layout_margin="1dp"
                android:visibility="visible"/>

        </RelativeLayout>


    </RelativeLayout>
</androidx.cardview.widget.CardView>