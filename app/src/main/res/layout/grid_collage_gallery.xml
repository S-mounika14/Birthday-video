<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/viewpager_bg_color">

    <RelativeLayout
        android:id="@+id/toolbar_grid"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/toolbar_theme_bg"
        android:gravity="center"
        android:minHeight="?attr/actionBarSize">

        <ImageView
            android:id="@+id/image_tb"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:contentDescription="@string/back_click"
            android:padding="5dp"
            android:src="@drawable/back_page_sarees" />

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@+id/textview_photo_counter"
            android:layout_toRightOf="@+id/image_tb"
            android:gravity="center"
            android:text="@string/choose_images"
            android:textColor="@color/darkgrey"
            android:textSize="@dimen/textsize_toolbar"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textview_photo_counter"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/text_bg"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="@string/next"
            android:textAppearance="@style/customfontstyle"
            android:textColor="#ffffff"
            android:textSize="16sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/shadowutop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_grid"
        android:background="@drawable/shadow_down"
        android:contentDescription="@string/shadowtop"
        android:minHeight="6.0dip" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/shadowutop"
        android:background="@color/viewpager_bg_color">


        <LinearLayout
            android:id="@+id/scollBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/viewpager_bg_color"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/linearBottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.birthday.video.maker.Birthday_Video.customgallery.hlistview.widget.HListView
                        android:id="@+id/hListView1"
                        android:layout_width="match_parent"
                        android:layout_height="80dp" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutGalleryPhoto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/scollBottom"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@color/viewpager_bg_color"
            android:gravity="start"
            android:orientation="horizontal">

            <ListView
                android:id="@+id/listViewImage"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:layout_weight="1.0"
                android:background="@color/viewpager_bg_color"
                android:scrollbars="none" />


            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:layout_weight="0.5"
                android:background="@color/viewpager_bg_color"
                android:gravity="center">

                <GridView
                    android:id="@+id/gridGallery"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:numColumns="3"

                    android:scrollbars="none" />

                <TextView
                    android:id="@+id/textview_no_gallery_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/no_images_found_in_gallery"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:visibility="invisible" />
            </FrameLayout>
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
