<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:background="#ffffff"
    android:layout_height="match_parent">




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btm_view"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:background="#e5e5e5"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="120dp"
        >
    <RelativeLayout
        android:id="@+id/capture_cake_lyt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e5e5e5"
        android:layout_centerInParent="true"
        android:layout_marginTop="25dp"
        >

        <LinearLayout
            android:id="@+id/cap_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                app:cardBackgroundColor="@color/transparent"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                android:layout_centerInParent="true"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:id="@+id/image_capture"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                   >
                    <TextView
                        android:id="@+id/preview_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="invisible" />

                    <com.birthday.video.maker.Birthday_Video.activity.AllImageView
                        android:id="@+id/main_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:scaleType="centerCrop"
                        android:contentDescription="@string/gallery_image" />

                    <ImageView
                        android:id="@+id/photo_frame_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true"
                        android:contentDescription="@string/frame_image"
                        />

                    <FrameLayout
                        android:id="@+id/border_frame_layout_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/double_frame_imageview_border"
                        android:visibility="gone"
                        >

                        <ImageView
                            android:id="@+id/border_view_1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            />
                    </FrameLayout>

                    <RelativeLayout
                        android:id="@+id/txt_stkr_cake_rel"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:contentDescription="@string/stickerview"
                        android:visibility="visible" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:visibility="gone"/>
    </RelativeLayout>
    </RelativeLayout>


