<!--                    android:id="@+id/buttonSaveimage"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:clickable="false"-->
<!--                    android:contentDescription="@string/save_edit_button"-->
