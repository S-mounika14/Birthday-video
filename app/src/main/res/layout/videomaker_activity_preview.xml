<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true">

    <include layout="@layout/videomaker_layout_preview2" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/birthday_profile_maker_image" />


    <LinearLayout
        android:id="@+id/bottom_sheet"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior" >


        <TextView
            android:layout_width="fill_parent"
            android:layout_height="?listPreferredItemHeightSmall"
            android:background="@color/blue_txt"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/abc_dialog_padding_material"
            android:text="@string/select_duration"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/white"
            android:textSize="14.0sp"
            android:textStyle="bold"
            android:typeface="serif" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvDuration"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>