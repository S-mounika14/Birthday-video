<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    android:layout_gravity="center"
    android:background="@color/transparent"
    android:id="@+id/clickableView_card_frame"
    android:layout_width="wrap_content"
    app:cardCornerRadius="10dp"
  >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/ivThumb_f"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/bg_card_transparent"
            android:clickable="true"
            android:scaleType="fitXY"
            android:contentDescription="@string/video_theme_image_item" />

        <ImageView
            android:id="@+id/clickableView_f"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/transparent"
            android:contentDescription="@string/video_theme_click_image"
            android:visibility="visible"
            />
        <TextView
            android:id="@+id/tvFrameName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ivThumb_f"
            android:background="@drawable/text_theme_bg"
            android:gravity="center"
            android:maxLines="1"
            android:singleLine="true"
            android:typeface="serif"
            android:textStyle="normal"
            android:textColor="@android:color/white"
            android:textSize="14sp" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>
