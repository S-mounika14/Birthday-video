<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialogue_back"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/round_remove"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:scaleType="centerCrop"
        android:src="@drawable/round_remove" />

    <!-- Birthday details card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="15dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginEnd="10dp"
                    android:contentDescription="@string/profile_image"
                    android:src="@drawable/add_icon" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textViewName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:text="@string/name"
                        android:textAppearance="@style/customfontstyle"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="" />

                    <TextView
                        android:id="@+id/textViewDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:text="@string/date_of_birth"
                        android:textAppearance="@style/customfontstyle"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/textViewTurn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/how_many_years"
                        android:textAppearance="@style/customfontstyle"
                        android:textColor="@color/black"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/action_edit_birthday"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="13dp"
                        android:contentDescription="@string/edit_image"
                        android:src="@drawable/edit"
                        android:visibility="visible" />

                    <ImageView
                        android:id="@+id/delete_birthday"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:contentDescription="@string/delete_icon"
                        android:src="@drawable/delete"
                        android:visibility="visible" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Actions card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="15dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/wishmessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="20dp"
                android:text="@string/happy_birthday"
                android:textAppearance="@style/customfontstyle"
                android:textColor="@color/darkgrey"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- First row: Frames and Cakes -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:id="@+id/send_frames"
                        android:layout_width="0dp"
                        android:layout_height="90dp"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="175dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="14dp"
                            android:background="@drawable/curved_right_edge"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:contentDescription="@string/birthday_photo_frames_click"
                                android:src="@drawable/photo_frame_12" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:ellipsize="end"
                                android:gravity="center"
                                android:maxLines="2"
                                android:padding="5dp"
                                android:text="@string/send_birthday_frames"
                                android:textColor="#ffffff"
                                android:textSize="11sp" />
                        </LinearLayout>
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/sendcakes"
                        android:layout_width="0dp"
                        android:layout_height="90dp"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="175dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="14dp"
                            android:background="@drawable/curved_left_edge"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:contentDescription="@string/photo_on_cake_click"
                                android:src="@drawable/photo_on_cake12" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:ellipsize="end"
                                android:gravity="center"
                                android:maxLines="2"
                                android:padding="5dp"
                                android:text="@string/send_birthday_cakes"
                                android:textColor="#ffffff"
                                android:textSize="11sp" />
                        </LinearLayout>
                    </FrameLayout>
                </LinearLayout>

                <!-- Second row: Quotes and Video -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <!-- Send Quotes -->
                    <FrameLayout
                        android:id="@+id/sendmessages"
                        android:layout_width="0dp"
                        android:layout_height="90dp"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="175dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="14dp"
                            android:background="@drawable/curve_birthdayquotes"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:contentDescription="@string/birthday_messages_click"
                                android:src="@drawable/quotes12" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:ellipsize="end"
                                android:gravity="center"
                                android:maxLines="2"
                                android:padding="5dp"
                                android:text="@string/send_birthday_quotes"
                                android:textColor="#ffffff"
                                android:textSize="11sp" />
                        </LinearLayout>
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/sendvideo"
                        android:layout_width="0dp"
                        android:layout_height="90dp"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="175dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="14dp"
                            android:background="@drawable/curve_birthdayvideo"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:contentDescription="@string/video_icon"
                                android:src="@drawable/video_making_12" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:ellipsize="end"
                                android:gravity="center"
                                android:maxLines="2"
                                android:padding="5dp"
                                android:text="@string/send_birthday_video"
                                android:textColor="#ffffff"
                                android:textSize="11sp" />
                        </LinearLayout>
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>