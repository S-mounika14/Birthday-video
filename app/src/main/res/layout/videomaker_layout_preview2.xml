<!--                </LinearLayout>-->


            </LinearLayout>


        </LinearLayout>

        <ImageView
            android:id="@+id/shadowutop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tool_man"
            android:background="@drawable/shadow_down"
            android:contentDescription="@string/shadowtop"
            android:minHeight="6.0dip" />

        <RelativeLayout
            android:id="@+id/container"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/shadowutop"
            android:layout_marginTop="10dp">

            <RelativeLayout
                android:id="@+id/scaleRelLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.birthday.video.maker.Birthday_Video.video_maker.view.PreviewImageView
                    android:id="@+id/previewImageView1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_centerHorizontal="true"
                    android:background="@color/transparent"
                    android:backgroundTint="@color/transparent" />

                <RelativeLayout
                    android:id="@+id/center_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white">


                    <RelativeLayout
                        android:id="@+id/txt_stkr_video"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginEnd="0dp"
                        android:layout_marginBottom="0dp"
                        android:gravity="center" />
                </RelativeLayout>

                <View
                    android:id="@+id/video_clicker"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/previewImageView1"
                    android:layout_alignBottom="@+id/previewImageView1"
                    android:background="@drawable/bg_card_transparent"
                    android:clickable="true"
                    android:focusable="true" />

                <RelativeLayout
                    android:id="@+id/captureRelativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/previewImageView1"
                    android:layout_alignBottom="@+id/previewImageView1"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/ivFrame"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/video_image"
                        android:scaleType="fitXY"/>


                    <TextView
                        android:id="@+id/preview_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="invisible" />
                    <RelativeLayout
                        android:id="@+id/txt_stkr_rel"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/stickerview">
                    </RelativeLayout>

                </RelativeLayout>


