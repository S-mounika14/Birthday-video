<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/viewpager_bg_color"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/hello_world"
                android:textAlignment="center"
                android:textColor="@color/darkgrey"
                android:textIsSelectable="true"
                android:textSize="18dp"
                android:textStyle="normal"
                android:textAppearance="@style/customfontstyle"/>


        </RelativeLayout>
    </RelativeLayout>




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/shareimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shadow_button_big"
            android:src="@drawable/share_messages_icon2"
            android:contentDescription="@string/share_quote" />

        <ImageButton
            android:id="@+id/copyto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/shadow_button_big"
            android:src="@drawable/copy_messages_icon2"
            android:contentDescription="@string/copy_quote" />


    </LinearLayout>

</LinearLayout>
