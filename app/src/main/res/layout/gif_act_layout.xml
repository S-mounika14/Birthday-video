<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#ffffff"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/gif_btm_lyt"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:background="#e5e5e5"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="120dp"
        >

    <RelativeLayout
        android:id="@+id/image_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e5e5e5"
        android:layout_centerInParent="true"
        android:layout_marginTop="25dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_gf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                app:cardBackgroundColor="@color/transparent"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                android:layout_centerInParent="true"
                app:cardUseCompatPadding="true">
                <RelativeLayout
                    android:id="@+id/image_capture"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                   >
                    <TextView
                        android:id="@+id/preview_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="invisible" />
                    <com.birthday.video.maker.Birthday_Video.activity.AllImageView
                        android:id="@+id/gifImagegal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:scaleType="centerCrop"
                        android:contentDescription="@string/gallery_image"
                        android:visibility="visible" />


                <ImageView
                    android:id="@+id/gifImageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/gif_frames"
                    android:layout_centerInParent="true"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:visibility="visible" />

                <FrameLayout
                    android:id="@+id/border_frame_layout_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/double_frame_imageview_border"
                    android:visibility="gone"
                    >
                    <ImageView
                        android:id="@+id/border_view_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />
                </FrameLayout>
                <RelativeLayout
                    android:id="@+id/txt_gif_stkr_rel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/stickerview"/>

                </RelativeLayout>

<!--                <TextView-->
<!--                    android:id="@+id/preview_text_view"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:visibility="invisible" />-->

            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:visibility="gone"/>

    </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/frames_button_layout_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:baselineAligned="false"
            android:gravity="center"
            android:layout_below="@+id/shadowutop"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="4">

            <LinearLayout
                android:id="@+id/change_photo_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:background="?selectableItemBackgroundBorderless"
                android:contentDescription="@string/frames"
                android:gravity="center"
                android:orientation="vertical"
                android:theme="@style/SelectableLayoutItemTheme">

                <ImageView
                    android:id="@+id/change_photo_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:background="@android:color/transparent"
                    android:clickable="false"
                    android:contentDescription="@string/app_name"
                    android:focusable="false"
                    android:importantForAccessibility="no"
                    android:src="@drawable/change_photo_one"
                    app:tint="@color/rating_yellow"
                    tools:ignore="UseAppTint" />

                <TextView
                    android:id="@+id/change_photo_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:focusable="false"
                    android:importantForAccessibility="no"
                    android:text="@string/change_photo"
                    android:textColor="@color/Gray"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    tools:ignore="SmallSp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/reflect_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:orientation="vertical"
                android:theme="@style/SelectableLayoutItemTheme">

                <ImageView
                    android:id="@+id/reflect_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:background="@android:color/transparent"
                    android:clickable="false"
                    android:contentDescription="@string/app_name"
                    android:focusable="false"
                    android:importantForAccessibility="no"
                    android:src="@drawable/reflect_icon"
                    android:tint="@color/blue_color"
                    tools:ignore="UseAppTint" />

                <TextView
                    android:id="@+id/reflect_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:focusable="false"
                    android:importantForAccessibility="no"
                    android:text="@string/reflect"
                    android:textColor="@color/Gray"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    tools:ignore="SmallSp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/rotate_layout1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/text"
                android:gravity="center"
                android:orientation="vertical"
                android:theme="@style/SelectableLayoutItemTheme">

                <ImageView
                    android:id="@+id/rotate_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:background="@android:color/transparent"
                    android:clickable="false"
                    android:contentDescription="@string/app_name"
                    android:focusable="false"
                    android:src="@drawable/rotate_icon"
                    android:tint="#69CFC5"
                    tools:ignore="UseAppTint" />

                <TextView
                    android:id="@+id/rotate_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:focusable="false"
                    android:text="@string/rotater"
                    android:textColor="@color/Gray"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    tools:ignore="SmallSp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/done_view_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:orientation="vertical"
                android:theme="@style/SelectableLayoutItemTheme">

                <ImageView
                    android:id="@+id/done_img"
                    android:layout_width="50dp"
                    android:layout_height="38dp"
                    android:layout_marginBottom="5dp"
                    android:background="@android:color/transparent"
                    android:clickable="false"
                    android:focusable="false"
                    android:importantForAccessibility="no"
                    android:src="@drawable/done_icon"
                    android:tint="#EB5F83"
                    tools:ignore="UseAppTint" />

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/tool_gif"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/toolbar_theme_bg"
            android:orientation="horizontal"
            android:weightSum="1">

            <RelativeLayout
                android:id="@+id/gif_photo_frame_backpress"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0.2"
                android:contentDescription="@string/back_from_gif_photo_frames"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/back_page_icon"
                    android:src="@drawable/back_page_sarees_1" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.7">

                <TextView
                    android:id="@+id/gif_tool_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="@string/gif_photo_frames"
                    android:textAlignment="center"
                    android:textColor="@color/darkgrey"
                    android:textSize="@dimen/textsize_toolbar"
                    android:textStyle="bold" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center|right"
                android:layout_weight="0.1"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="visible">


                <TextView
                    android:id="@+id/gif_image_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/my_bgss"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="13dp"
                    android:layout_marginTop="1dp"
                    android:foreground="?selectableItemBackgroundBorderless"
                    android:paddingStart="15dp"
                    android:paddingLeft="10dp"
                    android:paddingEnd="15dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="@string/save1"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/edit_text_and_image_color" />




            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/shadowutop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shadow_down"
            android:contentDescription="@string/shadowtop"
            android:layout_below="@+id/tool_gif"
            android:minHeight="6.0dip" />





    </RelativeLayout>



    <LinearLayout
        android:id="@+id/gif_btm_lyt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:baselineAligned="false"
        android:orientation="vertical">

       <!-- <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d4d0d0" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#ffffff"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:visibility="visible"
            android:weightSum="5">

            <LinearLayout
                android:id="@+id/gifs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:contentDescription="@string/gifs_click"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="2dp">

                <ImageView
                    android:id="@+id/gif_frame_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/gif_sticker_loop"
                    android:clickable="false"
                    android:contentDescription="@string/gif_icon"
                    android:gravity="center" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="2dp"
                    android:singleLine="true"
                    android:text="@string/gifs"
                    android:textAppearance="@style/customfontstyle"
                    android:textColor="@color/darkgrey"
                    android:textSize="12sp" />

            </LinearLayout>

            <TextView
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@drawable/line" />

            <LinearLayout
                android:id="@+id/change_pic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:contentDescription="@string/change_photo_click"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="2dp">

                <ImageView
                    android:id="@+id/change_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="2dp"
                    android:background="@color/transparent"
                    android:clickable="false"
                    android:contentDescription="@string/add_photo"
                    android:gravity="center"
                    android:src="@drawable/change_pic_2"
                    app:tint="#60c2fc"
                    />

                <TextView
                    android:id="@+id/sticker_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="2dp"
                    android:singleLine="true"
                    android:text="@string/change_pic"
                    android:textAppearance="@style/customfontstyle"
                    android:textColor="@color/darkgrey"
                    android:textSize="12sp" />

            </LinearLayout>

            <TextView
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@drawable/line" />

            <LinearLayout
                android:id="@+id/add_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:contentDescription="@string/text_click"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="2dp">

                <ImageView
                    android:id="@+id/text_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="3dp"
                    android:background="@color/transparent"
                    android:clickable="false"
                    android:contentDescription="@string/text_icon"
                    android:gravity="center"
                    android:src="@drawable/text_iconn"
                    app:tint="#69CFC5"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="2dp"
                    android:text="@string/add_text"
                    android:textAppearance="@style/customfontstyle"
                    android:textColor="@color/darkgrey"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@drawable/line" />

            <LinearLayout
                android:id="@+id/add_sticker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:contentDescription="@string/stickers_click"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="2dp">

                <ImageView
                    android:id="@+id/sticker_i"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="2dp"
                    android:background="@color/transparent"
                    android:clickable="false"
                    android:contentDescription="@string/sticker_icon"
                    android:gravity="center"
                    android:src="@drawable/sticker_emoji"
                    app:tint="#496FD4"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="@string/stickers"
                    android:textAppearance="@style/customfontstyle"
                    android:textColor="@color/darkgrey"
                    android:textSize="12sp" />
            </LinearLayout>
            <TextView
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@drawable/line" />
            <LinearLayout
                android:id="@+id/filters_clk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:contentDescription="@string/stickers_click"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/filter_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_marginTop="2dp"
                    android:background="@color/transparent"
                    android:clickable="false"
                    android:contentDescription="@string/sticker_icon"
                    android:gravity="center"
                    android:src="@drawable/magic_filter"
                    app:tint="#EB5F83" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="@string/filters"
                    android:textAppearance="@style/customfontstyle"
                    android:textColor="@color/darkgrey"
                    android:textSize="12sp" />
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/stickerPanel"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/tab_indicator" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabstickers"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:tabIconTint="@null"
                android:background="@color/tab_background"
                app:tabGravity="center"
                app:tabIndicator="@drawable/tab_indicator"
                app:tabIndicatorColor="@color/tab_indicator"
                app:tabIndicatorGravity="bottom"
                app:tabIndicatorHeight="4dp"
                app:tabMode="scrollable"
                app:tabPaddingEnd="-10dp"
                app:tabPaddingStart="-10dp" />


            <ImageView
                android:id="@+id/close_stickers"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:src="@drawable/baseline_clear_24"
                app:tint="@color/black" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/tab_indicator" />


        <!-- ViewPager for Tabs, inside the parent LinearLayout -->
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewpagerstickers"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />


    </LinearLayout>




    <include layout="@layout/text_options_view_layout" />
    <include
        layout="@layout/filters_view_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

    <LinearLayout
        android:id="@+id/bg_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:visibility="gone">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/done_gif_bgs"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="6dp"
                android:src="@drawable/ic_done"
                android:background="@drawable/circle_gray_bg"
                android:visibility="visible"
                android:padding="5dp"
                />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:visibility="visible">


            <LinearLayout
                android:id="@+id/ko"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:layout_above="@+id/ko"
                    android:background="@drawable/shadow_view_lyt" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/white"
                    android:gravity="center">


                    <LinearLayout
                        android:id="@+id/nor_bgs_lyt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:background="@drawable/plain_bg"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/gif_rec"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:scrollbars="none" />
                        </LinearLayout>


                    </LinearLayout>


                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/lay_TextMain_gifs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.birthday.video.maker.floating.FloatingActionButton
                android:id="@+id/hide_lay_TextMain_gif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="end"
                android:contentDescription="@string/hidelayoutbutton"
                android:src="@drawable/ic_done"
                android:visibility="gone"
                app:fab_elevationCompat="4dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/saree_theme_bg"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:id="@+id/lay_fonts_control"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:contentDescription="@string/fonts_click"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <ImageView
                        android:id="@+id/imgFontControl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/imgfontcontrol"
                        android:src="@drawable/ic_font" />

                    <TextView
                        android:id="@+id/txt_fonts_control"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/txt_fonts"
                        android:textAppearance="@style/customfontstyle"
                        android:textColor="@color/darkgrey"
                        android:textSize="13dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lay_colors_control"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/app_theme_color"
                    android:contentDescription="@string/text_color_click"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/imgColorControl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/imgcolorcontrol"
                        android:src="@drawable/ic_fontcolor_white" />

                    <TextView
                        android:id="@+id/txt_colors_control"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/txt_colors"
                        android:textAppearance="@style/customfontstyle"
                        android:textColor="@color/white"
                        android:textSize="13dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lay_shadow"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/app_theme_color"
                    android:contentDescription="@string/text_shadow_click"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/shadow_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/shadow_image"
                        android:src="@drawable/ic_shadow_white" />

                    <TextView
                        android:id="@+id/txt_shadow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/shadow"
                        android:textAppearance="@style/customfontstyle"
                        android:textColor="@color/white"
                        android:textSize="13dp" />
                </LinearLayout>

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#a9a9a9" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#ffffff">

                <LinearLayout
                    android:id="@+id/fontsShow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="0dp"
                    android:layout_marginRight="0dp"
                    android:background="@color/fonts_rec_bgcolor"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/fonts_recycler_gif"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/colorShow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/fonts_rec_bgcolor"
                    android:orientation="vertical"
                    android:visibility="gone">


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/subcolors_recycler_text_gif"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:scrollbars="none"
                        android:visibility="visible" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/colors_recycler_text_gif"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:scrollbars="none" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/shadow_on_off"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/fonts_rec_bgcolor"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:weightSum="2">

                    <LinearLayout
                        android:id="@+id/shadow_seekbar"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1.8"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="@string/shadow"
                            android:textColor="@color/darkgrey"
                            android:textSize="14sp"
                            android:textStyle="normal" />

                        <SeekBar
                            android:id="@+id/seekBar_shadow"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="3dp"
                            android:max="25"
                            android:maxWidth="5dp"
                            android:maxHeight="5dp"
                            android:minWidth="5dp"
                            android:minHeight="5dp"
                            android:progressDrawable="@drawable/seekbar_progressbar0"
                            android:thumb="@drawable/my_custom_thumb1" />
                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/magic_animation_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/magic_animation"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/loading_border"
            android:layout_gravity="center"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/vertical_swing" />


    </FrameLayout>

</RelativeLayout>
