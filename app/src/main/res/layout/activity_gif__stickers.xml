                android:text="@string/gif_stickers"
                android:textAlignment="center"
                android:textAppearance="@style/customfontstyle"
                android:textColor="@color/darkgrey"
                android:textSize="@dimen/textsize_toolbar"
                android:ellipsize="end"
                android:maxLines="1"
                android:textStyle="bold" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center|right"
            android:layout_weight="0.1"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible">
            <TextView
                android:id="@+id/gif_sticker_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="13dp"
                android:background="@drawable/my_bgss"
                android:foreground="?selectableItemBackgroundBorderless"
                android:paddingStart="15dp"
                android:paddingLeft="10dp"
                android:paddingTop="8dp"
                android:paddingEnd="15dp"
                android:paddingRight="10dp"
                android:paddingBottom="8dp"
                android:text="@string/save1"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/edit_text_and_image_color" />

