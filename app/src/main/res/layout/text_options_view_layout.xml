<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/text_whole_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:visibility="gone"
    app:layout_constraintBottom_toBottomOf="parent"
    android:background="#f2f2f2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/text_options"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="0dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:background="@color/bgcolorPrimary"
                android:paddingTop="4dp"
                android:paddingBottom="3dp"
                android:weightSum="4">
                <LinearLayout
                    android:id="@+id/keyboard_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:theme="@style/SelectableLayoutItemTheme"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    tools:ignore="UseCompoundDrawables"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:contentDescription="@string/keyboard"
                        android:src="@drawable/text_icon"
                        android:tint="#93B926"
                        tools:ignore="UseAppTint"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:text="@string/text"
                        android:textColor="@color/Gray"
                        android:fontFamily="@font/designfont"
                        android:textStyle="bold"
                        android:textSize="8sp"
                        android:padding="2dp" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/color_options_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:theme="@style/SelectableLayoutItemTheme"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    tools:ignore="UseCompoundDrawables">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/color_options_card"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@android:color/transparent"
                        android:layout_gravity="center"
                        >
                        <LinearLayout
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            >
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="25dp"
                                android:contentDescription="@string/color"
                                android:src="@drawable/color"
                                android:tint="#256F9A"
                                tools:ignore="UseAppTint"
                                android:paddingTop="1dp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="1dp"
                                android:text="@string/color"
                                android:textColor="@color/Gray"
                                android:fontFamily="@font/designfont"
                                android:textStyle="bold"
                                android:textSize="8dp"
                                android:padding="2dp"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/threeD"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:theme="@style/SelectableLayoutItemTheme"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    tools:ignore="UseCompoundDrawables">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/threeDoptionscard"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:cardCornerRadius="6dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@android:color/transparent">
                        <LinearLayout
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:orientation="vertical"
                            android:gravity="center">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="25dp"
                                android:contentDescription="@string/font"
                                android:src="@drawable/_d_text"
                                android:tint="@color/rating_yellow"
                                tools:ignore="UseAppTint"
                                android:paddingTop="1dp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="1dp"
                                android:text="@string/Rotation"
                                android:textColor="@color/Gray"
                                android:fontFamily="@font/designfont"
                                android:textStyle="bold"
                                android:textSize="8sp"
                                android:padding="2dp"
                                />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/font_options_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:theme="@style/SelectableLayoutItemTheme"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    tools:ignore="UseCompoundDrawables">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/font_options_card"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:cardCornerRadius="6dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@android:color/transparent">
                        <LinearLayout
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:orientation="vertical"
                            android:gravity="center">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="25dp"
                                android:contentDescription="@string/font"
                                android:src="@drawable/font_"
                                android:tint="#93B926"
                                tools:ignore="UseAppTint"
                                android:id="@+id/font_options_image"
                                android:paddingTop="1dp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="1dp"
                                android:text="@string/font"
                                android:textColor="@color/Gray"
                                android:fontFamily="@font/designfont"
                                android:textStyle="bold"
                                android:textSize="8sp"
                                android:padding="2dp"
                                android:id="@+id/font_options_text"
                                />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/text_decorate_card_view"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            app:cardBackgroundColor="#f2f2f2"
            >
            <RelativeLayout
                android:id="@+id/bottom_root_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <LinearLayout
                    android:id="@+id/text_color_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:weightSum="3"
                    android:paddingTop="1dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        >
                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="30dp"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="20dp"
                            android:gravity="center"
                            android:background="@drawable/color_background"
                            android:text="@string/text"
                            android:textColor="@color/grey_40"
                            android:id="@+id/text_color"
                            android:textSize="12sp" />
                        <TextView
                            android:id="@+id/text_view_background"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="80dp"
                            android:layout_marginTop="20dp"
                            android:gravity="center"
                            android:background="@drawable/color_background"
                            android:text="@string/background"
                            android:textColor="@color/grey_40"
                            android:textSize="12sp" />
                        <TextView
                            android:id="@+id/size_options_layout"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="190dp"
                            android:layout_marginTop="20dp"
                            android:gravity="center"
                            android:background="@drawable/color_background"
                            android:text="@string/shadow"
                            android:textColor="@color/grey_40"
                            android:textSize="12sp" />

                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/text_shadow_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone"
                    tools:ignore="NotSibling">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="35dp"
                        android:layout_marginRight="15dp">
                        <SeekBar
                            android:id="@+id/shadowSizeSeekBar"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:adjustViewBounds="true"
                            android:stepSize="1"
                            android:contentDescription="@string/shadow"
                            android:value="0"
                            android:valueFrom="0"
                            android:progressTint="#414a4c"
                            android:thumbTint="#414a4c"
                            android:progressBackgroundTint="#C1C0C0"
                            android:valueTo="100"/>
                        <TextView
                            android:id="@+id/shadowSizeValueText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="0" />
                    </LinearLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/shadow_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        >
                    </androidx.recyclerview.widget.RecyclerView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/text_size_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone"
                    tools:ignore="NotSibling">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="35dp"
                        android:layout_marginRight="15dp">
                        <SeekBar
                            android:id="@+id/textSizeSeekBar"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:adjustViewBounds="true"
                            android:stepSize="1"
                            android:contentDescription="@string/shadow"
                            android:value="0"
                            android:valueFrom="0"
                            android:progressTint="#414a4c"
                            android:thumbTint="#414a4c"
                            android:progressBackgroundTint="#C1C0C0"
                            android:valueTo="100"/>
                        <TextView
                            android:id="@+id/textSizeValueText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="0" />
                    </LinearLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/color_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        >
                    </androidx.recyclerview.widget.RecyclerView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/background_size_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone"
                    tools:ignore="NotSibling">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="35dp"
                        android:layout_marginRight="15dp">
                        <SeekBar
                            android:id="@+id/backgroundSizeSeekBar"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:adjustViewBounds="true"
                            android:stepSize="1"
                            android:contentDescription="@string/shadow"
                            android:value="0"
                            android:valueFrom="0"
                            android:progressTint="#414a4c"
                            android:thumbTint="#414a4c"
                            android:progressBackgroundTint="#C1C0C0"
                            android:valueTo="100"/>
                        <TextView
                            android:id="@+id/backgroundSizeValueText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="100" />
                    </LinearLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/background_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        >
                    </androidx.recyclerview.widget.RecyclerView>
                </LinearLayout>



                <LinearLayout
                    android:id="@+id/rotate_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone"
                    xmlns:tools="http://schemas.android.com/tools"
                    tools:ignore="NotSibling">

                    <LinearLayout
                        android:id="@+id/reset_rotate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="15dp"
                        android:layout_gravity="end"
                        android:visibility= "visible">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"

                            android:src="@drawable/ic_refresh"
                            android:visibility="visible"
                            app:tint="#414a4c" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="@string/reset"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:textSize="14dp"
                            android:textColor="#414a4c"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="29dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="#414a4c"
                            android:textStyle="bold"
                            android:text="@string/horizontal"/>

                      <!--  <SeekBar
                            android:id="@+id/horizontal_rotation_seekbar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:contentDescription="@string/shadow"
                            android:max="360"
                            android:progressTint="#414a4c"
                            android:thumbTint="#414a4c"
                            android:progressBackgroundTint="#C1C0C0"
                            android:progress="180"/>-->
                        <com.birthday.video.maker.Birthday_Video.activity.TwoLineSeekBar

                            android:id="@+id/horizontal_rotation_seekbar"
                            android:layout_width="260dp"
                            android:layout_height="20dp"
                            app:high_color="#414a4c"
                            app:line_color="#C1C0C0"
                            app:line_width="3dp"
                            app:nail_color="#414a4c"
                            app:nail_radius="1dp"
                            app:thumb_radius="7dp"
                            app:thumb_color="#414a4c"
                            tools:ignore="MissingClass"

                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"

                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="#414a4c"
                            android:textStyle="bold"
                            android:text="@string/vertical"/>

                       <!-- <SeekBar
                            android:id="@+id/vertical_rotation_seekbar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:contentDescription="@string/shadow"
                            android:max="360"
                            android:progressTint="#414a4c"
                            android:thumbTint="#414a4c"
                            android:progressBackgroundTint="#C1C0C0"
                            android:progress="180"/>-->
                        <com.birthday.video.maker.Birthday_Video.activity.TwoLineSeekBar

                            android:id="@+id/vertical_rotation_seekbar"
                            android:layout_width="260dp"
                            android:layout_height="25dp"
                            app:high_color="#414a4c"
                            app:line_color="#C1C0C0"
                            app:line_width="3dp"
                            app:nail_color="#414a4c"
                            app:nail_radius="1dp"
                            app:thumb_radius="7dp"
                            app:thumb_color="#414a4c"
                            tools:ignore="MissingClass"

                            />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/text_font_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/font_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="10dp"
                        >
                    </androidx.recyclerview.widget.RecyclerView>
                </LinearLayout>
            </RelativeLayout>


        </androidx.cardview.widget.CardView>
    </LinearLayout>


</RelativeLayout>