<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/start_bg"
    android:orientation="vertical"
    android:fitsSystemWindows="true">
    <TextView
        android:id="@+id/shaaa"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@drawable/shadow_down" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/shaaa">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:descendantFocusability="blocksDescendants"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center">


                <LinearLayout
                    android:id="@+id/clicks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <FrameLayout
                        android:id="@+id/popup_ad_placeholder"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp">


                        <TextView
                            android:id="@+id/loadingText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/loading_ad"
                            android:textColor="@android:color/black"
                            android:textSize="12sp"
                            android:visibility="visible" />
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/create_birthday_videos1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:paddingLeft="5dp"
                            android:paddingTop="5dp"
                            android:paddingRight="5dp"
                            android:text="@string/create_birtday_videos"
                            android:textAppearance="@style/customfontstyle"
                            android:textColor="@color/black_launch"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:weightSum="1">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/card_5"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:contentDescription="@string/video_maker_click"
                                app:cardBackgroundColor="@color/transparent"
                                app:cardCornerRadius="5dp"
                                app:cardElevation="3dp"
                                android:focusable="true"
                                android:foreground="?selectableItemBackgroundBorderless"
                                android:theme="@style/SelectableItemThemeWhite"
                                app:cardUseCompatPadding="true">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:background="@drawable/launch_btn3"
                                    android:gravity="center"

                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/card_5_textview"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:padding="5dp"
                                        android:shadowColor="@color/txt_shadow_color"
                                        android:shadowDy="3"
                                        android:shadowRadius="2"
                                        android:text="@string/birthday_video_maker"
                                        android:textColor="@color/white"
                                        android:textSize="15sp"
                                        android:textStyle="bold"
                                        android:typeface="serif" />

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:contentDescription="@string/video_maker_icon"
                                        android:src="@mipmap/birthday_video_maker" />

                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/create_birthday_cards1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:paddingLeft="5dp"
                            android:paddingTop="5dp"
                            android:paddingRight="5dp"
                            android:text="@string/create_frames"
                            android:textAppearance="@style/customfontstyle"
                            android:textColor="@color/black_launch"
                            android:textSize="13sp"
                            android:textStyle="bold" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:weightSum="2">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/card_1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:contentDescription="@string/birthday_photo_frames_click"
                                app:cardBackgroundColor="@color/transparent"
                                app:cardCornerRadius="5dp"
                                android:focusable="true"
                                android:foreground="?selectableItemBackgroundBorderless"
                                android:theme="@style/SelectableItemThemeWhite"
                                app:cardElevation="3dp"
                                app:cardUseCompatPadding="true">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:background="@drawable/launch_btn11"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/card_1_textview"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:padding="5dp"
                                        android:shadowColor="@color/txt_shadow_color"
                                        android:shadowDy="2"
                                        android:shadowRadius="1"
                                        android:text="@string/photo_frames"
                                        android:textColor="@color/white"
                                        android:textSize="15sp"
                                        android:textStyle="bold"
                                        android:typeface="serif" />

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:background="@mipmap/photo_frames_1"
                                        android:contentDescription="@string/frames_icon" />

                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/card_2"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:contentDescription="@string/greeting_cards_click"
                                app:cardBackgroundColor="@color/transparent"
                                app:cardCornerRadius="5dp"
                                app:cardElevation="3dp"
                                app:cardUseCompatPadding="true"
                                android:focusable="true"
                                android:foreground="?selectableItemBackgroundBorderless"
                                android:theme="@style/SelectableItemThemeWhite">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:background="@drawable/launch_btn2"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/card_2_textview"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:padding="5dp"
                                        android:shadowColor="@color/txt_shadow_color"
                                        android:shadowDy="2"
                                        android:shadowRadius="1"
                                        android:text="@string/greeting_cards"
                                        android:textColor="@color/white"
                                        android:textSize="15sp"
                                        android:textStyle="bold"
                                        android:typeface="serif" />

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:contentDescription="@string/greeting_icon"
                                        android:src="@mipmap/greeting_icon1" />

                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/create_birthday_cakes1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:paddingLeft="5dp"
                            android:paddingTop="5dp"
                            android:paddingRight="5dp"
                            android:text="@string/create_birthday_cakes"
                            android:textAppearance="@style/customfontstyle"
                            android:textColor="@color/black_launch"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:visibility="visible" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:weightSum="2">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/card_3"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:contentDescription="@string/name_on_cake_click"
                                app:cardBackgroundColor="@color/transparent"
                                app:cardCornerRadius="5dp"
                                app:cardElevation="3dp"
                                app:cardUseCompatPadding="true"
                                android:focusable="true"
                                android:foreground="?selectableItemBackgroundBorderless"
                                android:theme="@style/SelectableItemThemeWhite">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:background="@drawable/launch_btn9"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/card_3_textview"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:padding="5dp"
                                        android:shadowColor="@color/txt_shadow_color"
                                        android:shadowDy="3"
                                        android:shadowRadius="2"
                                        android:text="@string/name_on_cake"
                                        android:textColor="@color/white"
                                        android:textSize="15sp"
                                        android:textStyle="bold"
                                        android:typeface="serif" />

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:contentDescription="@string/name_cake_icon"
                                        android:src="@mipmap/name_on_cake_icon" />

                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/card_4"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:contentDescription="@string/photo_on_cake_click"
                                app:cardBackgroundColor="@color/transparent"
                                app:cardCornerRadius="5dp"
                                app:cardElevation="3dp"
                                app:cardUseCompatPadding="true"
                                android:focusable="true"
                                android:foreground="?selectableItemBackgroundBorderless"
                                android:theme="@style/SelectableItemThemeWhite">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:background="@drawable/launch_btn8"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/card_4_textview"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:padding="5dp"
                                        android:shadowColor="@color/txt_shadow_color"
                                        android:shadowDy="3"
                                        android:shadowRadius="2"
                                        android:text="@string/photo_on_cake"
                                        android:textColor="@color/white"
                                        android:textSize="15sp"
                                        android:textStyle="bold"
                                        android:typeface="serif" />

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:contentDescription="@string/photo_cake_icon"
                                        android:src="@mipmap/p_on_c1" />

                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/create_birthday_gifs1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:paddingLeft="5dp"
                            android:paddingTop="5dp"
                            android:paddingRight="5dp"
                            android:text="@string/create_birthday_gifs"
                            android:textAppearance="@style/customfontstyle"
                            android:textColor="@color/black_launch"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:weightSum="1">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/card_7"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:contentDescription="@string/greeting_cards_click"
                                app:cardBackgroundColor="@color/transparent"
                                app:cardCornerRadius="5dp"
                                app:cardElevation="3dp"
                                app:cardUseCompatPadding="true"
                                android:focusable="true"
                                android:foreground="?selectableItemBackgroundBorderless"
                                android:theme="@style/SelectableItemThemeWhite">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:background="@drawable/launch_btn7"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/card_7_textview"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:padding="5dp"
                                        android:shadowColor="@color/txt_shadow_color"
                                        android:shadowDy="3"
                                        android:shadowRadius="2"
                                        android:text="@string/birthday_gif_stickers"
                                        android:textColor="@color/white"
                                        android:textSize="15sp"
                                        android:textStyle="bold"
                                        android:typeface="serif" />

                                    <ImageView
                                        android:id="@+id/gif_sticker_img"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:background="@drawable/gif_sticker_loop_btn"
                                        android:contentDescription="@string/gif_sticker_icon" />

                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/others"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:paddingLeft="5dp"
                            android:paddingTop="5dp"
                            android:paddingRight="5dp"
                            android:text="@string/others"
                            android:textAppearance="@style/customfontstyle"
                            android:textColor="@color/black_launch"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:weightSum="3"
                            android:layout_marginBottom="20dp">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/Quotes_clk"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                app:cardBackgroundColor="@color/transparent"
                                app:cardCornerRadius="5dp"
                                app:cardElevation="3dp"
                                app:cardUseCompatPadding="true"
                                android:focusable="true"
                                android:foreground="?selectableItemBackgroundBorderless"
                                android:theme="@style/SelectableItemThemeWhite">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:background="@drawable/launch_btn5"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/card_Quotes_clk"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:padding="5dp"
                                        android:shadowColor="@color/txt_shadow_color"
                                        android:shadowDy="3"
                                        android:shadowRadius="2"
                                        android:text="@string/birthday_quotes"
                                        android:textColor="@color/white"
                                        android:textSize="15sp"
                                        android:textStyle="bold"
                                        android:typeface="serif" />

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:contentDescription="@string/wishes_icon"
                                        android:src="@mipmap/birthday_quotes_icon"
                                        android:visibility="gone" />

                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/reminder_clk"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:contentDescription="@string/reminder_click"
                                app:cardBackgroundColor="@color/transparent"
                                app:cardCornerRadius="5dp"
                                app:cardElevation="3dp"
                                app:cardUseCompatPadding="true"
                                android:focusable="true"
                                android:foreground="?selectableItemBackgroundBorderless"
                                android:theme="@style/SelectableItemThemeWhite">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:background="@drawable/launch_btn1"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/card_reminder_clk"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:padding="5dp"
                                        android:shadowColor="@color/txt_shadow_color"
                                        android:shadowDy="3"
                                        android:shadowRadius="2"
                                        android:text="@string/reminder"
                                        android:textColor="@color/white"
                                        android:textSize="15sp"
                                        android:textStyle="bold"
                                        android:typeface="serif" />

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:contentDescription="@string/reminder_icon"
                                        android:src="@mipmap/reminder_icon"
                                        android:visibility="gone" />

                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/age_clk"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:contentDescription="@string/age_calculator_click"
                                app:cardBackgroundColor="@color/transparent"
                                app:cardCornerRadius="5dp"
                                app:cardElevation="3dp"
                                app:cardUseCompatPadding="true"
                                android:focusable="true"
                                android:foreground="?selectableItemBackgroundBorderless"
                                android:theme="@style/SelectableItemThemeWhite">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:background="@drawable/age_btn"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/card_age_clk"
                                        android:layout_width="wrap_content"
                                        android:layout_height="87dp"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:padding="5dp"
                                        android:shadowColor="@color/txt_shadow_color"
                                        android:shadowDy="3"
                                        android:shadowRadius="2"
                                        android:text="@string/age_calculator"
                                        android:textColor="@color/white"
                                        android:textSize="15sp"
                                        android:textStyle="bold"
                                        android:typeface="serif" />

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:contentDescription="@string/calculator_icon"
                                        android:src="@mipmap/age_icon"
                                        android:visibility="gone" />

                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>



            </RelativeLayout>

        </LinearLayout>


    </ScrollView>

    <RelativeLayout
        android:id="@+id/loading_launch_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="#A08B8B8B"
        android:gravity="center"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:background="@drawable/progress_bg"
            android:orientation="horizontal"
            android:padding="8dp">

            <ProgressBar
                android:id="@+id/loader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:theme="@style/AppTheme.ProgressColor"

                />

            <TextView
                android:id="@+id/loading_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="5dp"
                android:text="@string/please_wait"
                android:textAppearance="@style/customfontstyle"
                android:textColor="@color/white"
                android:textSize="18sp" />

        </LinearLayout>
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/magic_animation_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/magic_animation"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/loading_border"
            android:layout_gravity="center"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/vertical_swing" />


    </FrameLayout>




</RelativeLayout>

