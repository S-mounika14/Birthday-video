<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialogue_back"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/round_remove"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:scaleType="centerCrop"
        android:src="@drawable/round_remove" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/transparent"
            android:gravity="center">

            <RelativeLayout
                android:id="@+id/imageLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/transparent"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imageViewProfil"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/add_icon2"
                    android:contentDescription="@string/profile_image"
                    android:scaleType="fitXY" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/editTextName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/reminder_et_bg"
                    android:focusable="true"
                    android:hint="@string/enter_name"
                    android:maxLength="20"
                    android:padding="15dp"
                    android:paddingLeft="30dp"
                    android:textAlignment="center"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:textColor="@color/darkgrey"
                    android:textColorHint="@color/hintcolor"
                    android:textAppearance="@style/customfontstyle"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/editTextDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/reminder_et_bg"
                    android:ems="10"
                    android:focusable="false"
                    android:hint="@string/birthday_date"
                    android:inputType="text"
                    android:maxLength="20"
                    android:padding="15dp"
                    android:paddingLeft="30dp"
                    android:textAlignment="center"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp"
                    android:textColor="@color/darkgrey"
                    android:textColorHint="@color/hintcolor"
                    android:textAppearance="@style/customfontstyle"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="@dimen/_20dp"
                    android:gravity="top|center"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/save_prof_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="10dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/reminder_et_bg"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/buttonSaveimage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:padding="5dp"
                            android:contentDescription="@string/save_edit_button"
                            android:src="@drawable/ic_save_white_24dp_reminder" />

                        <TextView
                            android:id="@+id/buttonSave"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:paddingLeft="2dp"
                            android:text="@string/save_birthday"
                            android:textAllCaps="false"
                            android:textColor="@color/darkgrey"
                            android:textSize="16sp"
                            android:padding="5dp"
                            android:textStyle="bold"
                            android:textAppearance="@style/customfontstyle" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>