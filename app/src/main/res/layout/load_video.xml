<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_dialog_rel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/video_dialog_bg"
    android:padding="10dp">

    <FrameLayout
        android:id="@+id/close_dialog_frame_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="?selectableItemBackgroundBorderless"
        android:focusable="true"
        android:paddingStart="8dp"
        android:paddingLeft="8dp"
        android:paddingTop="6dp"
        android:paddingEnd="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="6dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="@string/cancel_str"
            app:srcCompat="@drawable/ic_close_black_24dp" />

    </FrameLayout>


    <ProgressBar
        android:id="@+id/loading_progress_bar"
        style="@android:style/Widget.Holo.Light.ProgressBar.Large.Inverse"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/close_dialog_frame_layout"
        android:layout_centerInParent="true"
        android:indeterminate="true" />

    <TextView
        android:id="@+id/tv_change_img_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loading_progress_bar"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/loading_dialog"
        android:textColor="#5f5f5f"
        android:textSize="19sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_conform_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_change_img_title"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:text="@string/please_wait_load"
        android:textColor="#888888"
        android:textSize="15sp" />


</RelativeLayout>