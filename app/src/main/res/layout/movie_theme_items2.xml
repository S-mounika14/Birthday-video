<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/clickableView_rel"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layout_gravity="center"
    android:layout_marginLeft="4dp"
    android:layout_marginTop="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginBottom="2dp"
    android:gravity="center">

    <ImageView
        android:id="@+id/ivThumb"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"

        android:background="@drawable/bg_card_transparent"
        android:clickable="true"
        android:scaleType="fitXY"
        android:contentDescription="@string/video_frame_item" />

    <ImageView
        android:id="@+id/clickableView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:contentDescription="@string/clickable_image"
        android:visibility="visible"
        />

    <ImageView
        android:id="@+id/cbSelect"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignTop="@+id/imageView1"
        android:contentDescription="@string/selection"
        android:background="@drawable/background_bg_frm"
        android:visibility="gone"
       />

    <TextView
        android:id="@+id/tvThemeName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ivThumb"
        android:background="@drawable/text_theme_bg"
        android:gravity="center"
        android:maxLines="1"
        android:padding="2dp"
        android:singleLine="true"
        android:textAppearance="@style/customfontstyle"
        android:textStyle="normal"
        android:textColor="@android:color/white"
        android:textSize="11sp" />


</RelativeLayout>
