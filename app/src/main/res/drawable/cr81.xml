<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="oval">
            <solid android:color="#3EF7F6F6" />

            <!--shadow Color-->
            <size
                android:width="25dp"
                android:height="25dp" />
            <stroke android:width="3dp"
                android:color="@color/white"></stroke>
        </shape>
    </item>

    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="oval">
            <size
                android:width="25dp"
                android:height="25dp" />
            <solid android:color="@color/darkgrey" />
        </shape>
    </item>
</layer-list>